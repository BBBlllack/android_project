<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">
    <RelativeLayout
        android:id="@+id/updatemsg_re1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/skin_topbar_bg_color">
        <ImageView
            android:id="@+id/back1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>
        <TextView
            android:id="@+id/tv_type2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更改密码"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/updatemsg_view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/updatemsg_re1"
        android:background="#A8A7A7"
        android:layout_marginTop="1dp"/>
    <RelativeLayout
        android:id="@+id/updatepwd_re1"
        android:layout_below="@id/updatemsg_view"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >
        <TextView
            android:id="@+id/updatepwd_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旧密码:"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/oldpwd"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="请输入旧密码"
            android:layout_toRightOf="@id/updatepwd_t1"
            />


    </RelativeLayout>
    <View
        android:id="@+id/updatepwd_vi1"
        android:layout_below="@id/updatepwd_re1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <RelativeLayout
        android:id="@+id/updatepwd_re2"
        android:layout_below="@id/updatepwd_vi1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >
        <TextView
            android:id="@+id/updatepwd_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码:"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/newpwd"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="请输入新密码"
            android:layout_toRightOf="@id/updatepwd_t2"
            />
    </RelativeLayout>

    <View
        android:id="@+id/updatepwd_vi2"
        android:layout_below="@id/updatepwd_re2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <RelativeLayout
        android:id="@+id/updatepwd_re3"
        android:layout_below="@id/updatepwd_vi2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        >
        <TextView
            android:id="@+id/updatepwd_t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再确认:"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/newpwd1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="请再次输入密码"
            android:layout_toRightOf="@id/updatepwd_t3"
            />
    </RelativeLayout>
    <View
        android:id="@+id/updatepwd_vi3"
        android:layout_below="@id/updatepwd_re3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
    <Button
        android:id="@+id/change"
        android:layout_below="@+id/updatepwd_vi3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/back2"
        android:text="点击更改"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</RelativeLayout>