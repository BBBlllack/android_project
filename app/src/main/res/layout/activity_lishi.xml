<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">
    <RelativeLayout
        android:id="@+id/updatemsg_re1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/skin_topbar_bg_color">
        <ImageView
            android:id="@+id/back2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>
        <TextView
            android:id="@+id/tv_type2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="历史记录"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/updatemsg_view1"
        android:layout_width="wrap_content"
        android:layout_height="0.0001dp"
        android:layout_below="@+id/updatemsg_re1"
        android:background="#A8A7A7"
        android:layout_marginTop="1dp"/>

    <ListView
        android:id="@+id/lishiliebiao"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/light_gray"
        android:layout_below="@id/updatemsg_view1"
        android:layout_marginTop="5dp"
        android:layout_weight="1" />

</RelativeLayout>