<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:fadeScrollbars="true"
        android:scrollbarThumbVertical="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical">



        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:text="AI总结"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/title_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_title"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="关键词总结:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <edu.hebut.technote.utils.TypeTextView
            android:id="@+id/text_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请等待..."
            android:layout_below="@+id/title_keyword"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#222222"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/title_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_keywords"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="文章总结:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <edu.hebut.technote.utils.TypeTextView
            android:id="@+id/text_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="请等待..."
            android:layout_below="@id/title_summary"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#222222"
            android:textSize="15dp" />
    </LinearLayout>
</ScrollView>
</LinearLayout>